# 支付配置示例文件
# 复制到 .env.local 并填入真实的配置信息

# 微信支付配置
NEXT_PUBLIC_WECHAT_APP_ID=your_wechat_app_id
WECHAT_MERCHANT_ID=your_wechat_merchant_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_CERT_PATH=/path/to/wechat/cert.pem
WECHAT_KEY_PATH=/path/to/wechat/key.pem

# 支付宝配置
NEXT_PUBLIC_ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your_alipay_private_key
-----END RSA PRIVATE KEY-----"
ALIPAY_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
your_alipay_public_key
-----END PUBLIC KEY-----"

# Stripe配置
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# 应用配置
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/deepneed_db